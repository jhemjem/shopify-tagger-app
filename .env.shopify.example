# Shopify Bulk Product Tagger Configuration
# Copy these values to your .env file and replace with your actual credentials

# Your Shopify store domain (without https://)
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com

# API credentials from your Shopify app
# Get these from: Shopify Admin > Settings > Apps and sales channels > Develop apps
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# Admin API access token (requires read_products, write_products scopes)
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Shopify API version (recommended: 2024-10 or latest stable)
SHOPIFY_API_VERSION=2024-10

# Queue configuration (for background processing)
# Use 'database' for simple setup, 'redis' for production
QUEUE_CONNECTION=database

# Optional: Enable debug mode for troubleshooting
# APP_DEBUG=true
# LOG_LEVEL=debug
